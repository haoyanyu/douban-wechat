.scroll-list {
  min-height: 280rpx;
  margin: 20rpx 0;
}
.scroll-list .title-box {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 34rpx;
  margin-bottom:20rpx;
}
.title-box .list-title {
  float: left;
  margin-left: 10rpx;
}
.title-box .list-more {
  float: right;
  margin-right: 10rpx;
  color: rgb(77, 155, 129);
  font-size: 28rpx;
}
.scroll-list .movie-item {
  width: 240rpx;
  padding:10rpx;
}
.movie-item .item-image {
  display: block;
  max-width: 100%;
  height: 340rpx;
}
.movie-item .movie-title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 32rpx;
  color: #747474;
  text-align: center;
  line-height: 2;
}
.string-title {
  display: inline-block;
  border: 2rpx solid #FFB712;
  border-radius: 8rpx;
  margin: 12rpx;
  padding: 20rpx;
}
.string-title:empty {
  display: block;
  width: 0;
  height: 0;
  line-height: 0;
  font-size: 0;
  overflow: hidden;
  border: none;
  margin:0;
  border-radius: 0;
}